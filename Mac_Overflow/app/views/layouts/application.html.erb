          <li><%= link_to "Log out", logout_path, id: "logout", method: "delete" %></li>
          <li> <%= link_to "Profile", user_path(current_user) %> </li>
      <% else %>
          <li><%= link_to "Log in", login_path, id: "login" %></li>
          <li><%= link_to "Sign Up", signup_path, id: "signup" %> </li>
      <% end %>
